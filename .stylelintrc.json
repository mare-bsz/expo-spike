{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "block-no-empty": true,
    "no-duplicate-selectors": true,
    "color-hex-length": "short",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  }
}